map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
}

upstream websocket {
        server localhost:8010;
	server localhost:8011;
}

server {
	listen 80;
 
	root /home/projects/www;
	index index.php index.html;
 
	server_name _;
	
	if (-d $request_filename) {
        rewrite [^/]$ $scheme://$http_host$uri/ permanent;
    }

	location ~ piwik\.php(.*)$ {
		return 204;
	}

        location ~ glicer\.php(.*)$ {
		return 204;
	}
        

	try_files $uri @w;

	location @w {
            rewrite ^(.+)\.(\d+)\.(js|css|png|jpg|gif|ttf|woff|eot|svg|json)$ $1.$3;
	}

	location ~ \.php$ {
        	include snippets/fastcgi-php.conf;
        	fastcgi_pass unix:/run/php/php7.0-fpm.sock;
		fastcgi_param  PHP_VALUE  "include_path=/home/projects/php";		
		fastcgi_param  SMTP_HOST  "${SMTP_HOST}";
		fastcgi_param  SMTP_USERNAME "${SMTP_USERNAME}";
		fastcgi_param  SMTP_PASSWORD "${SMTP_PASSWORD}";
		fastcgi_param  DATA_DIRECTORY "/home/projects/data";
    	}

	location ~ /\.ht {
        	deny all;
    	}

        location /chat/ {
            rewrite /chat/(.*) /$1 break;
            proxy_pass http://localhost:8010;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
        }

	location /todo/ {
	   rewrite /todo/(.*) /$1 break;
           proxy_pass http://localhost:8011;
           proxy_http_version 1.1;
           proxy_set_header Upgrade $http_upgrade;
           proxy_set_header Connection $connection_upgrade;
	
	}
}

